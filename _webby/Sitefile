require 'compass'

SITE.output_dir = '..'
SITE.user = 'cdmwebs'
SITE.host = '26webs.com'
SITE.remote_dir = '/home/cdmwebs/sites/cdmwebs.com/current/public'

Compass.configuration do |config|
  config.project_path = File.dirname(__FILE__)
  config.sass_dir = File.join('content', 'stylesheets', 'partials')
  config.sass_options = { :syntax => :scss }  
end

Webby.site.sass_options.update(Compass.sass_engine_options)

task :default => :clean_build

desc 'deploy the site to the webserver'
task :deploy => [:build, 'deploy:rsync']

